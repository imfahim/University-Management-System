@model ProEntity.Section

@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddSection</title>
</head>
<body>
    <div align="center">
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    
        <fieldset>
            <legend>Add Section</legend>
    
            <div class="editor-field">
                <label>Section Name</label>
                @Html.EditorFor(model => model.SecName)
                @Html.ValidationMessageFor(model => model.SecName)
            </div>
            <div class="form-group">
                <label>Select Faculty</label>
                
                    @Html.DropDownList("FacultyId", (List<SelectListItem>)ViewBag.Faculties, new { htmlAttributes = new { @class = "form-control" } })

            </div>
            <div class="form-group">
                <label>Select Course</label>
  
                    @Html.DropDownList("CourseId", (List<SelectListItem>)ViewBag.Courses, new { htmlAttributes = new { @class = "form-control" } })
  
            </div>

            <p>
                <input type="submit" value="Create" class="btn-success"/>
            </p>
        </fieldset>
    }

        @Html.ActionLink("Back", "Index")
    </div>
</body>
</html>
